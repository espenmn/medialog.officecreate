<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="medialog.officecreate" metal:use-macro="context/main_template/macros/master">
  <body>
    <metal:content fill-slot="content">
      <metal:block define-macro="content">

        <div id="mycontainer">
          <div class="m-10-0">
            <button class="btn button standalone btn-success" type="button" onclick="window.history.back();" i18n:translate="">⬅ Tilbake</button>
            <hr/>
          </div>
          <h3>Velg Office Template</h3>

          <form method="post">
            <select name="selected_file">
              <option value="" i18n:translate="">-- Velg template --</option>
              <tal:repeat tal:repeat="item view/find_docx_in_templates|None">
                <option value="${item/uuid}"> ${item/title} – ${item/file_type}</option>
              </tal:repeat>
            </select>
            <div class="m-10-0">
              <hr/>
              <input type="submit" i18n:translate="" value="Generate Office Document"/>
            </div>
          </form>
          <br/>
          <p i18n:translate="">Velg mal fra menyen ovenfor for å generere et Word- eller PowerPoint-dokument</p>
        </div>
      </metal:block>
    </metal:content>
  </body>
</html>
